+
+        property var colors: ["#FFFFFF", "#FFFF80", "#FFFF00", "#FF80FF",
+                              "#FF8080", "#FF8000", "#FF00FF", "#FF0080",
+                              "#FF0000", "#80FFFF", "#80FF80", "#80FF00",
+                              "#8080FF", "#808080", "#808000", "#8000FF",
